<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="campusattendance.attendance_student.mapper.CourseClassMapper">
    <!-- 根据课程ID列表查询课程班级关联列表 -->
    <select id="selectByCourseIds" parameterType="java.util.List" resultType="campusattendance.attendance_student.model.CourseClass">
        SELECT id, course_id as courseId, class_id as classId
        FROM course_class
        WHERE course_id IN
        <foreach collection="courseIds" item="courseId" open="(" separator="," close=")">
            #{courseId}
        </foreach>
    </select>
</mapper>