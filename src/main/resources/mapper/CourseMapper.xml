<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="campusattendance.attendance_student.mapper.CourseMapper">
    <!-- 根据教师ID查询课程列表 -->
    <select id="selectByTeacherId" parameterType="java.lang.Long" resultType="campusattendance.attendance_student.model.Course">
        SELECT id, course_name as courseName, teacher_id as teacherId, create_time as createTime
        FROM course
        WHERE teacher_id = #{teacherId}
    </select>
</mapper>