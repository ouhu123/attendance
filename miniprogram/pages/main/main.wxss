  background: rgba(244, 67, 54, 0.1);
}

.record-status.late {
  color: #FF9800;
  background: rgba(255, 152, 0, 0.1);
}

/* 未登录状态 */
.not-logged-in {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  gap: 30rpx;
}

.login-prompt {
  font-size: 36rpx;
  /* 更改为新的天空蓝 */
  color: #2196F3;
  font-weight: bold;
}

.login-btn {
  /* 更改为新的天空蓝渐变 */
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  color: #fff;
  border: none;
  border-radius: 30rpx;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
}

/* 手势签到样式 */
.gesture-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.gesture-modal-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 500rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.modal-tip {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.gesture-container-modal {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.gesture-grid-modal {
  position: relative;
  width: 400rpx;
  height: 400rpx;
}

.gesture-point-modal {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  /* 更改为新的天空蓝 */
  background: rgba(33, 150, 243, 0.2);
  transform: translate(-50%, -50%);
  transition: all 0.2s ease;
  z-index: 1;
}

.gesture-point-modal.active {
  /* 更改为新的天空蓝 */
  background: rgba(33, 150, 243, 0.8);
  box-shadow: 0 0 20rpx rgba(33, 150, 243, 0.5);
  transform: translate(-50%, -50%) scale(1.2);
}

.gesture-canvas-modal {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.modal-buttons {
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
}

.modal-btn-reset, .modal-btn-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin: 0;
}

.modal-btn-reset {
  color: #666;
  background: #f5f5f5;
  border: 1rpx solid #ddd;
}

.modal-btn-confirm {
  color: #fff;
  /* 更改为新的天空蓝渐变 */
  background: linear-gradient(135deg, #0288D1 0%, #29B6F6 100%);
  border: none;
  box-shadow: 0 5rpx 15rpx rgba(3, 169, 244, 0.3);
}

.modal-btn-reset:active, .modal-btn-confirm:active {
  transform: scale(0.95);
}