/* 共用首页样式 - 包含教师端和学生端样式 */
page {
  height: 100vh;
  /* 统一为清爽的浅蓝渐变 */
  background: linear-gradient(135deg, #E1F5FE 0%, #B3E5FC 50%, #81D4FA 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  position: relative;
}

/* 教师主页面容器 */
.teacher-main-container {
  padding: 40rpx;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 头像图片 */
.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 教师端内容容器 */
.teacher-content {
  width: 100%;
  z-index: 2;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.6);
  animation: float 3s ease-in-out infinite;
}

.circle1 {
  width: 120rpx;
  height: 120rpx;
  top: 80rpx;
  left: 80rpx;
  animation-delay: 0s;
  background: linear-gradient(45deg, rgba(33, 150, 243, 0.5), rgba(3, 169, 244, 0.5));
}

.circle2 {
  width: 80rpx;
  height: 80rpx;
  top: 120rpx;
  right: 120rpx;
  animation-delay: 1s;
  background: linear-gradient(45deg, rgba(0, 188, 212, 0.5), rgba(0, 145, 234, 0.5));
}

.circle3 {
  width: 100rpx;
  height: 100rpx;
  top: 160rpx;
  left: 350rpx;
  animation-delay: 2s;
  background: linear-gradient(45deg, rgba(0, 150, 136, 0.5), rgba(0, 188, 212, 0.5));
}

.circle4 {
  width: 70rpx;
  height: 70rpx;
  top: 100rpx;
  right: 200rpx;
  animation-delay: 1.5s;
  background: linear-gradient(45deg, rgba(63, 81, 181, 0.5), rgba(33, 150, 243, 0.5));
}

/* 浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 60rpx;
  z-index: 2;
  position: relative;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.logout-btn {
  font-size: 28rpx;
  /* 更改为新的天空蓝 */
  color: #2196F3;
  background: rgba(255, 255, 255, 0.9);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  /* 更改为新的天空蓝 */
  border: 2rpx solid #2196F3;
  cursor: pointer;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.logout-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  /* 更改为新的天空蓝 */
  color: #2196F3;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  /* 更改为新的天空蓝 */
  border: 4rpx solid #2196F3;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 快速操作卡片 */
.quick-actions {
  display: flex;
  justify-content: center;
  margin-bottom: 50rpx;
  z-index: 2;
  position: relative;
  flex-wrap: wrap;
  gap: 20rpx;
}

.action-card {
  width: 48%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(3, 169, 244, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.action-card::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(3, 169, 244, 0.05) 50%,
    transparent 70%
  );
  animation: shimmer 3s infinite;
  z-index: -1;
}

/* 闪光动画 */
@keyframes shimmer {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.action-card:active {
  transform: scale(0.98);
}

.card-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 25rpx;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 蓝色图标渐变 */
.icon-start {
  background: linear-gradient(135deg, #29B6F6 0%, #0288D1 100%);
}

/* 蓝色图标渐变 */
.icon-records {
  background: linear-gradient(135deg, #4FC3F7 0%, #0288D1 100%);
}

/* 蓝绿色图标渐变 */
.icon-sign {
  background: linear-gradient(135deg, #26C6DA 0%, #0097A7 100%);
}

/* 深蓝色图标渐变 */
.icon-location {
  background: linear-gradient(135deg, #5C6BC0 0%, #3949AB 100%);
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  /* 更改为新的天空蓝 */
  color: #2196F3;
  margin-bottom: 15rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 32rpx;
}

/* 最近签到信息 */
.recent-attendance {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 50rpx;
  box-shadow: 0 20rpx 60rpx rgba(3, 169, 244, 0.2);
  z-index: 2;
