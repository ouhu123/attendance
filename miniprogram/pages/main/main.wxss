}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  /* 统一边框颜色 */
  border-bottom: 1rpx solid #B3E5FC;
  transition: all 0.3s ease;
}

.record-item:active {
  background: rgba(225, 245, 254, 0.3);
  transform: scale(0.98);
}

.record-item:last-child {
  border-bottom: none;
}

.record-left {
  display: flex;
  flex-direction: column;
}

.record-course {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.record-class {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.record-status {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  background: rgba(76, 175, 80, 0.1);
}

.record-status.absent {
