.sign-btn {
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;

  /* 蓝绿色签到按钮 */
  background: linear-gradient(135deg, #26C6DA 0%, #0097A7 100%);
  color: #fff;
  border: none;
  border-radius: 30rpx;
  font-size: 28rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(38, 198, 218, 0.3);
  position: relative;
  overflow: hidden;

  /* 关键：让按钮成为块级元素 */
  display: block;
  width: 80%;   /* 可选，控制按钮宽度，更好看 */
}

.sign-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  transition: left 0.5s;
}

.sign-btn:active::before {
  left: 100%;
}

.signed-btn {
  margin-top: 20rpx;
  background: linear-gradient(135deg, #90A4AE 0%, #607D8B 100%);
  color: #fff;
  border: none;
  border-radius: 30rpx;
  font-size: 28rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(96, 125, 139, 0.3);
