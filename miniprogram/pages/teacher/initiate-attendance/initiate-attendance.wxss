/* 发起签到页面样式 */
.initiate-attendance-container {
  padding: 20rpx;
  font-family: Arial, sans-serif;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 九宫格手势样式 */
.gesture-setting {
  margin-top: 40rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.gesture-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.gesture-container {
  position: relative;
  width: 600rpx;
  height: 600rpx;
  margin: 0 auto;
}

.gesture-grid {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  touch-action: none;
}

.gesture-point {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border: 4rpx solid #4a90e2;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
}

.gesture-point.active {
  background-color: #4a90e2;
}

.gesture-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.gesture-path {
  position: absolute;
  top: 650rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 28rpx;
  color: #666;
  min-height: 30rpx;
  text-align: center;
  padding: 10rpx;
}

.gesture-tips {
  position: absolute;
  top: 700rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #999;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
}

.gesture-set-text {
  color: #52c41a !important;
}

.clear-btn {
  color: #1890ff;
  text-decoration: underline;
}

.page-title {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  margin-bottom: 30rpx;
}

.back-btn {
  font-size: 28rpx;
  color: #1976D2;
  margin-right: 20rpx;
  padding: 10rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

/* 表单样式 */
.form-container {
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

/* 调试信息样式 */
.debug-info {
  display: block;
  font-size: 20rpx;
  color: #ff9800;
  margin-bottom: 10rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  background-color: #fafafa;
}

/* 错误提示样式 */
.error-text {
  font-size: 24rpx;
  color: #ff4444;
  margin-top: 10rpx;
  display: block;
  text-align: left;
}

/* 错误提示样式 */
.error-text {
  font-size: 24rpx;
  color: #ff4444;
  margin-top: 10rpx;
  display: block;
  text-align: left;
}

/* 时长选择器 */
.duration-selector {
  display: flex;
  justify-content: space-between;
}

.duration-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  background-color: white;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.duration-btn.active {
  background-color: #1976D2;
  color: white;
  border-color: #1976D2;
}

/* 范围选择器 */
.radius-selector {
  display: flex;
  align-items: center;
}

.radius-input {
  flex: 1;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx 0 0 8rpx;
  font-size: 26rpx;
  background-color: #fafafa;
}

.radius-unit {
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-left: none;
  border-radius: 0 8rpx 8rpx 0;
  font-size: 26rpx;
  color: #666;
  background-color: #fafafa;
}

/* 位置信息 */
.location-info {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.location-label {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.location-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
}

.location-text {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

.refresh-btn {
  font-size: 22rpx;
  color: #1976D2;
}

/* 发起签到按钮 */
.initiate-btn {
  width: 100%;
  padding: 25rpx;
  background-color: #1976D2;
  color: white;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(25, 118, 210, 0.3);
}

/* 二维码容器 */
.qr-code-container {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.qr-code-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.qr-code-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.ended-qrcode {
  font-size: 40rpx;
  font-weight: bold;
  color: #f44336;
  margin: 100rpx 0;
  text-align: center;
}

.qr-code {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.session-code {
  font-size: 24rpx;
  color: #666;
}

/* 签到状态 */
.attendance-status {
  margin-bottom: 30rpx;
}

.status-text {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
  text-align: center;
}

progress {
  width: 100%;
}

/* 结束签到按钮 */
.end-btn {
  width: 100%;
  padding: 25rpx;
  background-color: #f44336;
  color: white;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(244, 67, 54, 0.3);
}

/* 剩余时间样式 */
.remaining-time {
  text-align: center;
  margin: 20rpx 0;
}

.time-text {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.time-display {
  font-size: 48rpx;
  font-weight: bold;
  color: #1976D2;
  letter-spacing: 2rpx;
}

/* 签到已结束样式 */
.ended-text {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #f44336;
  margin: 20rpx 0;
}

/* 二维码位置的签到已结束文字样式 */
.ended-qrcode-text {
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #f44336;
  margin: 100rpx 0;
  padding: 40rpx;
  border: 2rpx solid #f44336;
  border-radius: 16rpx;
  background-color: #ffebee;
  width: 80%;
}

/* 手势设置按钮 */
.set-gesture-btn {
  width: 100%;
  padding: 20rpx;
  background-color: #1976D2;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.gesture-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

/* 手势设置弹窗 */
.gesture-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.gesture-modal-content {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 600rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}

.modal-tip {
  font-size: 28rpx;
  text-align: center;
  color: #666;
  margin-bottom: 40rpx;
}

.gesture-container-modal {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  margin-bottom: 40rpx;
}

.gesture-grid-modal {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  touch-action: none;
  border: 2rpx solid #e0e0e0;
}

.gesture-point-modal {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border: 4rpx solid #4a90e2;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  z-index: 2;
}

.gesture-point-modal.active {
  background-color: #4a90e2;
  border-color: #4a90e2;
}

.gesture-canvas-modal {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.modal-btn-reset {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
  color: #333;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
}

.modal-btn-confirm {
  flex: 1;
  padding: 20rpx;
  background-color: #1976D2;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: 2rpx solid #1976D2;
}