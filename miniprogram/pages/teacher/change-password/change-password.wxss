.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 40rpx 20rpx 80rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
  position: relative;
}

.back {
  position: absolute;
  left: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.back:hover {
  background-color: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.back-icon {
  font-size: 44rpx;
  font-weight: bold;
  color: white;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 2rpx;
}

.form-container {
  background-color: white;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  flex: 1;
  animation: slideUp 0.5s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-item {
  margin-bottom: 60rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.form-input {
  width: 100%;
  padding: 30rpx 35rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  font-size: 34rpx;
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background-color: #fafafa;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-input:focus {
  outline: none;
  border-color: #667eea;
  background-color: white;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.15), inset 0 0 0 2rpx #667eea;
  transform: translateY(-2rpx);
}

.form-input::placeholder {
  color: #999;
  font-size: 32rpx;
}

.password-hint {
  font-size: 28rpx;
  color: #ff6b6b;
  margin-top: 15rpx;
  line-height: 1.5;
  padding-left: 8rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-5rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 35rpx;
  border-radius: 18rpx;
  font-size: 38rpx;
  font-weight: 700;
  margin-top: 50rpx;
  box-shadow: 0 15rpx 40rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: none;
  letter-spacing: 3rpx;
  text-transform: uppercase;
  animation: pulse 2s infinite;
}

.submit-btn:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 20rpx 50rpx rgba(102, 126, 234, 0.5);
}

.submit-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 30rpx rgba(102, 126, 234, 0.4);
}

.submit-btn[disabled] {
  background: linear-gradient(135deg, #d1d1d1 0%, #b3b3b3 100%);
  box-shadow: none;
  transform: none;
  opacity: 0.7;
  animation: none;
}

@keyframes pulse {
  0% {
    box-shadow: 0 15rpx 40rpx rgba(102, 126, 234, 0.4);
  }
  50% {
    box-shadow: 0 15rpx 50rpx rgba(102, 126, 234, 0.5);
  }
  100% {
    box-shadow: 0 15rpx 40rpx rgba(102, 126, 234, 0.4);
  }
}