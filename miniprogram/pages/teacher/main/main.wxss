
/* 教师主页面样式 - 与登录页面风格一致 */
page {
  height: 100vh;
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 教师主页面容器 */
.teacher-main-container {
  padding: 40rpx;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  animation: float 3s ease-in-out infinite;
}

.circle1 {
  width: 120rpx;
  height: 120rpx;
  top: 80rpx;
  left: 80rpx;
  animation-delay: 0s;
}

.circle2 {
  width: 80rpx;
  height: 80rpx;
  top: 120rpx;
  right: 120rpx;
  animation-delay: 1s;
}

.circle3 {
  width: 100rpx;
  height: 100rpx;
  top: 160rpx;
  left: 350rpx;
  animation-delay: 2s;
}

/* 浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 60rpx;
  z-index: 2;
  position: relative;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.logout-btn {
  font-size: 28rpx;
  color: #1976D2;
  background: rgba(255, 255, 255, 0.9);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  border: 2rpx solid #1976D2;
  cursor: pointer;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.logout-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #1976D2;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  border: 4rpx solid #1976D2;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 快速操作卡片 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
  z-index: 2;
  position: relative;
}

.action-card {
  width: 48%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.action-card:active {
  transform: scale(0.98);
}

.card-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 25rpx;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-start {
  background: linear-gradient(135deg, #42A5F5 0%, #1976D2 100%);
}

.icon-records {
  background: linear-gradient(135deg, #FFA726 0%, #F57C00 100%);
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 15rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 32rpx;
}

/* 最近签到信息 */
.recent-attendance {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 50rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  z-index: 2;
  position: relative;
}

.section-title {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976D2;
}

.more-text {
  font-size: 26rpx;
  color: #42A5F5;
  font-weight: 500;
}

.attendance-list {
  display: flex;
  flex-direction: column;
}

.attendance-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #E3F2FD;
}

.attendance-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  flex-direction: column;
}

.course-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.class-department-grade {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.class-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 8rpx;
}

.course-info {
  font-size: 24rpx;
  color: #666;
}

.class-info {
  font-size: 24rpx;
  color: #666;
}

.item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.attendance-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.detail-btn {
  margin-top: 10rpx;
  background: #42A5F5;
  color: #fff;
  border: none;
  border-radius: 20rpx;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  line-height: 1.2;
  min-width: 120rpx;
  height: 50rpx;
  display: inline-block;
}

.attendance-status {
  font-size: 24rpx;
  color: #FFA726;
}

/* 统计信息 */
.statistics {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  z-index: 2;
  position: relative;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #E3F2FD;
  border-radius: 20rpx;
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 15rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #42A5F5;
  text-align: center;
}
