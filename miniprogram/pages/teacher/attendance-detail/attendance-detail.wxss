/* 签到详情页面样式 */
.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部装饰 */
.top-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  z-index: 0;
  overflow: hidden;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -50rpx;
}

.circle2 {
  width: 150rpx;
  height: 150rpx;
  top: 50rpx;
  left: -50rpx;
}

.circle3 {
  width: 100rpx;
  height: 100rpx;
  top: 150rpx;
  right: 100rpx;
}

/* 顶部导航栏 */
.top-nav {
  position: relative;
  z-index: 1;
  padding: 40rpx 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav-left {
  display: flex;
  align-items: center;
}

.back-btn {
  color: #fff;
  font-size: 32rpx;
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}

.page-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

/* 签到信息卡片 */
.session-info {
  position: relative;
  z-index: 1;
  margin: 20rpx 30rpx;
}

.info-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 学生列表区域 */
.student-section {
  position: relative;
  z-index: 1;
  margin: 20rpx 30rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 学生列表 */
.student-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.student-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.student-item:last-child {
  border-bottom: none;
}

.student-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.student-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.student-no {
  font-size: 24rpx;
  color: #999;
}

.student-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.student-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.status-text {
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  margin-bottom: 8rpx;
}

.status-attended {
  background: #e8f5e9;
  color: #4caf50;
}

.status-absent {
  background: #ffebee;
  color: #f44336;
}

.status-late {
  background: #fff3e0;
  color: #ff9800;
}

.status-leave {
  background: #e3f2fd;
  color: #2196f3;
}

.action-buttons {
  display: flex;
  gap: 10rpx;
  margin-top: 10rpx;
}

.action-btn {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
  min-width: 80rpx;
  height: 50rpx;
  line-height: 1.2;
}

.late-btn {
  background: #ff9800;
  color: #fff;
}

.leave-btn {
  background: #2196f3;
  color: #fff;
}

.sign-time {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

