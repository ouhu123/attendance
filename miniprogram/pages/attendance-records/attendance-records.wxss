/* 共用签到记录页面样式 - 包含教师端和学生端样式 */
/* 全局样式 */
page {
  height: 100vh;
  /* 统一为清爽的浅蓝渐变 */
  background: linear-gradient(135deg, #E1F5FE 0%, #B3E5FC 50%, #81D4FA 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  position: relative;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: -50rpx;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  animation: float 3s ease-in-out infinite;
}

.circle1 {
  width: 100rpx;
  height: 100rpx;
  top: 50rpx;
  left: 100rpx;
  animation-delay: 0s;
}

.circle2 {
  width: 60rpx;
  height: 60rpx;
  top: 100rpx;
  right: 150rpx;
  animation-delay: 1s;
}

.circle3 {
  width: 80rpx;
  height: 80rpx;
  top: 150rpx;
  left: 300rpx;
  animation-delay: 2s;
}

/* 浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

/* 标题部分 */
.title-section {
  margin-top: 150rpx;
  text-align: center;
  margin-bottom: 80rpx;
  z-index: 2;
}

.main-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 20rpx;
}

.sub-title {
  display: block;
  font-size: 28rpx;
  color: #64B5F6;
}

/* 签到记录容器 */
.records-container {
  width: 90%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  z-index: 2;
  margin: 100rpx auto 0;
}

/* 筛选条件 */
.filter-section {
  margin-bottom: 30rpx;
}

.filter-item {
  margin-bottom: 25rpx;
}

.filter-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.filter-input {
  width: 100%;
  height: 80rpx;
  background: #F5F5F5;
  border: none;
  border-radius: 15rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.placeholder-text {
  color: #BDBDBD;
}

/* 学生端月份切换 */
.month-selector {
  margin-bottom: 30rpx;
}

.month-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background: #F5F5F5;
  border-radius: 15rpx;
  padding: 0 20rpx;
}

.month-btn {
  width: 120rpx;
  height: 60rpx;
  background: #1976D2;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.month-btn:active {
  background: #1565C0;
}

.current-month {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

/* 记录列表 */
.records-list {
  max-height: 700rpx;
  overflow-y: auto;
}

.record-item {
  padding: 25rpx;
  border-bottom: 1rpx solid #E0E0E0;
  background: white;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.class-department-grade {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
  word-break: break-word;
}

.class-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 8rpx;
  display: block;
  word-break: break-word;
}

.course-info {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
  word-break: break-word;
}

.record-info {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.record-status {
  font-size: 24rpx;
  color: #64B5F6;
  margin-bottom: 15rpx;
}

.record-attendance {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.view-detail {
  font-size: 24rpx;
  color: #1976D2;
  text-align: right;
}

/* 无记录提示 */
.no-data {
  text-align: center;
  padding: 100rpx 0;
  color: #9E9E9E;
  font-size: 28rpx;
}

.no-data-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  color: #E0E0E0;
}

.no-data-text {
  color: #BDBDBD;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: 1;
  overflow: hidden;
}

.decoration-wave {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 200%;
  height: 100%;
  background: linear-gradient(180deg, transparent 0%, rgba(255, 255, 255, 0.3) 100%);
  animation: wave 8s ease-in-out infinite;
}

/* 波浪动画 */
@keyframes wave {
  0%, 100% {
    transform: translateX(0) translateY(0);
  }
  50% {
    transform: translateX(-25%) translateY(-10rpx);
  }
}

/* 加载动画 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 6rpx solid rgba(25, 118, 210, 0.1);
  border-left: 6rpx solid #1976D2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #64B5F6;
  margin-left: 15rpx;
}

/* 日期选择器样式 */
.date-picker {
  width: 100%;
  height: 80rpx;
  background: #F5F5F5;
  border: none;
  border-radius: 15rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-picker-arrow {
  font-size: 24rpx;
  color: #BDBDBD;
}

/* 课程名称输入框样式 */
.course-input {
  width: 100%;
  height: 80rpx;
  background: #F5F5F5;
  border: none;
  border-radius: 15rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

/* 学生端签到记录样式 */
.student-record-item {
  padding: 25rpx;
  border-bottom: 1rpx solid #E0E0E0;
  background: white;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.student-record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.student-record-date {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.student-record-status {
  font-size: 24rpx;
  font-weight: bold;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
}

.student-record-status.present {
  background: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.student-record-status.absent {
  background: rgba(244, 67, 54, 0.1);
  color: #F44336;
}

.student-record-status.late {
  background: rgba(255, 167, 38, 0.1);
  color: #FFA726;
}

.student-record-course {
  font-size: 28rpx;
  color: #1976D2;
  margin-bottom: 10rpx;
}

.student-record-time {
  font-size: 24rpx;
  color: #999;
}

/* 教师端签到记录样式 - 包含签到率等信息 */
.teacher-record-stats {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #E0E0E0;
}

.stats-item {
  text-align: center;
}

.stats-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.stats-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.attendance-rate {
  font-size: 32rpx;
  color: #4CAF50;
}

/* 返回按钮样式 */
.back-button {
  position: fixed;
  top: 30rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.back-button::before {
  content: "";
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #1976D2;
  border-top: 4rpx solid #1976D2;
  transform: rotate(-45deg);
}

/* 日期范围选择 */
.date-range-container {
  display: flex;
  gap: 20rpx;
}

.date-range-container .filter-input {
  width: 48%;
}