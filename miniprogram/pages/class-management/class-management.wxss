/* 共用班级管理页面样式 */
.class-management-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1976D2 0%, #64B5F6 100%);
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}

/* 顶部装饰 */
.class-management-container::before {
  content: '';
  position: absolute;
  top: -100rpx;
  left: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  z-index: 0;
}

.class-management-container::after {
  content: '';
  position: absolute;
  bottom: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  z-index: 0;
}

.title-section {
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.page-title {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.class-list {
  position: relative;
  z-index: 1;
  margin-bottom: 120rpx;
}

.class-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.class-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.class-info-left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 班级信息样式 */
.class-department {
  font-size: 26rpx;
  color: #4285F4;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.class-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

/* 课程名称样式 */
.class-course {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

/* 课程列表样式 */
.course-list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.course-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.course-names {
  font-size: 24rpx;
  color: #888;
  flex: 1;
}

.class-info-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 20rpx;
}

.class-meta {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.view-details-btn {
  background: #4285F4;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  min-width: 120rpx;
}

.empty-state {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 80rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

.add-class-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: #4CAF50;
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  z-index: 10;
}

.btn-text {
  font-size: 40rpx;
  font-weight: bold;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
  width: 80%;
  max-width: 500rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.close-btn:active {
  background: #f5f5f5;
}

.modal-body {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.btn {
  margin-left: 20rpx;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #4285F4;
  color: #fff;
}

/* 学生端课程项样式 */
.student-course-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #1976D2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 120rpx;
  transition: all 0.3s ease;
}

.student-course-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.student-course-item .class-info-left {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-right: 20rpx;
}

.student-course-item .class-course {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  text-align: left;
  padding: 20rpx 40rpx;
}

.student-course-item .class-info-right {
  flex-shrink: 0;
}

.student-course-item .view-details-btn {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  background: #4285F4;
  color: white;
  border: none;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}