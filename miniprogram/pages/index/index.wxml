<!--index.wxml-->
<view class="login-container">
  <!-- 顶部装饰 -->
  <view class="top-decoration">
    <view class="decoration-circle circle1"></view>
    <view class="decoration-circle circle2"></view>
    <view class="decoration-circle circle3"></view>
  </view>
  
  <!-- 标题 -->
  <view class="title-section">
    <text class="main-title">校园课堂考勤系统</text>
    <text class="sub-title">智慧校园，轻松考勤</text>
  </view>
  
  <!-- 登录表单 -->
  <view class="login-form">
    <!-- 用户类型选择 -->
    <view class="user-type-selector">
      <view class="type-item {{userType === 'student' ? 'active' : ''}}" bindtap="selectUserType" data-type="student">
        <text class="type-text">学生</text>
      </view>
      <view class="type-item {{userType === 'teacher' ? 'active' : ''}}" bindtap="selectUserType" data-type="teacher">
        <text class="type-text">教师</text>
      </view>
    </view>
    
    <!-- 账号输入 -->
    <view class="input-group">
      <view class="input-label">账号</view>
      <input 
        class="input-field" 
        placeholder="{{usernamePlaceholder}}" 
        placeholder-class="placeholder-text"
        maxlength="12"
        bindinput="onInputChange"
        data-field="username"
      />
    </view>
    
    <!-- 密码输入 -->
    <view class="input-group">
      <view class="input-label">密码</view>
      <input 
        class="input-field" 
        placeholder="{{passwordPlaceholder}}" 
        placeholder-class="placeholder-text"
        password
        bindinput="onInputChange"
        data-field="password"
      />
    </view>
    
    <!-- 登录按钮 -->
    <button class="login-btn" bindtap="login">
      <text class="login-btn-text">登录</text>
    </button>
    
  </view>
  
  <!-- 登录说明 -->
  <view class="login-instructions">
    <view class="instruction-title">登录说明</view>
    <view class="instruction-item">1. 初始密码为身份证后6位，末尾x取小写。</view>
  </view>
  
  <!-- 底部装饰 -->
  <view class="bottom-decoration">
    <view class="decoration-wave"></view>
  </view>
</view>
