/**index.wxss**/
/* 全局样式 */
page {
  height: 100vh;
  /* 更改为清爽的天空蓝渐变 */
  background: linear-gradient(135deg, #E3F2FD 0%, #B3E5FC 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  position: relative;
}

/* 登录容器 */
.login-container {
  height: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: -50rpx;
  left: 0;
  width: 100%;
  height: 300rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.6);
  animation: float 3s ease-in-out infinite;
}

/* 装饰圆圈颜色改为蓝色系 */
.circle1 {
  width: 120rpx;
  height: 120rpx;
  top: 50rpx;
  left: 80rpx;
  animation-delay: 0s;
  background: linear-gradient(45deg, rgba(79, 195, 247, 0.5), rgba(179, 229, 252, 0.5));
}

.circle2 {
  width: 80rpx;
  height: 80rpx;
  top: 120rpx;
  right: 120rpx;
  animation-delay: 1s;
  background: linear-gradient(45deg, rgba(100, 181, 246, 0.5), rgba(3, 169, 244, 0.5));
}

.circle3 {
  width: 100rpx;
  height: 100rpx;
  top: 180rpx;
  left: 250rpx;
  animation-delay: 2s;
  background: linear-gradient(45deg, rgba(179, 229, 252, 0.5), rgba(79, 195, 247, 0.5));
}

.circle4 {
  width: 70rpx;
  height: 70rpx;
  top: 80rpx;
  right: 250rpx;
  animation-delay: 0.5s;
  background: linear-gradient(45deg, rgba(144, 202, 249, 0.5), rgba(79, 195, 247, 0.5));
}

/* 浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

/* 脉冲动画 */
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

/* 标题部分 */
.title-section {
  margin-top: 150rpx;
  text-align: center;
  margin-bottom: 80rpx;
  z-index: 2;
  position: relative;
}

.main-title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  /* 标题颜色改为深蓝色 */
  color: #03A9F4;
  margin-bottom: 20rpx;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  position: relative;
  animation: pulse 2s infinite;
}

.sub-title {
  display: block;
  font-size: 32rpx;
  /* 副标题颜色改为中等蓝色 */
  color: #4FC3F7;
  font-weight: 500;
}

/* 登录表单 */
.login-form {
  width: 90%;
  max-width: 500rpx;
  background: white; /* 更改为纯白色 */
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  /* 阴影改为蓝色系 */
  box-shadow: 0 20rpx 60rpx white;
  z-index: 2;
  position: relative;
  overflow: hidden;
}

.login-form::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    /* 闪光效果改为浅蓝色 */
    rgba(3, 169, 244, 0.05) 50%
    ,
    transparent 70%
  );
  animation: shimmer 3s infinite;
  z-index: -1;
}

/* 闪光动画 */
@keyframes shimmer {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 用户类型选择 */
.user-type-selector {
  display: flex;
  justify-content: space-between;
  margin-bottom: 60rpx;
  padding: 10rpx;
  /* 背景改为浅蓝色渐变 */
  background: linear-gradient(135deg, #B3E5FC, #81D4FA);
  border-radius: 25rpx;
  /* 阴影改为蓝色系 */
  box-shadow: 0 5rpx 15rpx rgba(3, 169, 244, 0.2);
}

.type-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.type-item.active {
  /* 激活状态改为深蓝色渐变 */
  background: linear-gradient(135deg, #03A9F4, #4FC3F7);
  transform: scale(1.05);
  box-shadow: 0 5rpx 15rpx rgba(3, 169, 244, 0.3);
}

.type-text {
  font-size: 30rpx;
  font-weight: 600;
  /* 文字颜色改为深蓝色 */
  color: #01579B;
  position: relative;
  z-index: 1;
}

.type-item.active .type-text {
  color: white;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
}

/* 输入组 */
.input-group {
  margin-bottom: 40rpx;
  position: relative;
}

.input-label {
  font-size: 30rpx;
  font-weight: 600;
  color:black; /* 标签颜色改为深蓝色 */
  margin-bottom: 15rpx;
  display: block;
  position: relative;
}

.input-label::after {
  content: "";
  position: absolute;
  bottom: -5rpx;
  left: 0;
  width: 100%;
  height: 2rpx;
  /* 下划线颜色改为蓝色渐变 */
  background: linear-gradient(90deg, #03A9F4, #4FC3F7);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s ease;
}

.input-group:focus-within .input-label::after {
  transform: scaleX(1);
}

.input-field {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  /* 边框改为浅蓝色 */
  border: 2rpx solid #81D4FA;
  border-radius: 15rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color:black; /* 输入文字颜色改为深蓝色 */
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input-field:focus {
  /* 聚焦边框和阴影改为蓝色系 */
  border-color: #03A9F4;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 0 10rpx rgba(3, 169, 244, 0.2);
}

.placeholder-text {
  /* 占位符颜色改为中等蓝色 */
  color: #4FC3F7;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 90rpx;
  /* 按钮背景改为蓝色渐变 */
  background: linear-gradient(135deg, #03A9F4 0%, #4FC3F7 100%);
  border: none;
  border-radius: 45rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: white;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  /* 按钮阴影改为蓝色系 */
  box-shadow: 0 10rpx 30rpx rgba(3, 169, 244, 0.4);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.login-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  transition: left 0.5s;
}

.login-btn:active::before {
  left: 100%;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 15rpx rgba(3, 169, 244, 0.3);
}

.login-btn-text {
  font-size: 34rpx;
  font-weight: bold;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
}

/* 忘记密码 */
.forgot-password {
  text-align: center;
  margin-top: 20rpx;
}

.forgot-text {
  font-size: 26rpx;
  /* 文字颜色改为蓝色 */
  color: #03A9F4;
  font-weight: 500;
  position: relative;
  display: inline-block;
  transition: all 0.3s ease;
}

.forgot-text::after {
  content: "";
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 0;
  height: 2rpx;
  /* 下划线颜色改为蓝色 */
  background: #03A9F4;
  transition: width 0.3s ease;
}

.forgot-password:active .forgot-text::after {
  width: 100%;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 250rpx;
  z-index: 1;
  overflow: hidden;
}

/* 波浪颜色改为蓝色系 */
.decoration-wave {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 200%;
  height: 100%;
  background: linear-gradient(180deg, transparent 0%, rgba(3, 169, 244, 0.2) 100%);
  animation: wave 8s ease-in-out infinite;
}

.decoration-wave:nth-child(2) {
  background: linear-gradient(180deg, transparent 0%, rgba(79, 195, 247, 0.15) 100%);
  animation-delay: 2s;
  opacity: 0.7;
  height: 80%;
}

.decoration-wave:nth-child(3) {
  background: linear-gradient(180deg, transparent 0%, rgba(179, 229, 252, 0.1) 100%);
  animation-delay: 4s;
  opacity: 0.5;
  height: 60%;
}

/* 波浪动画 */
@keyframes wave {
  0%, 100% {
    transform: translateX(0) translateY(0);
  }
  50% {
    transform: translateX(-25%) translateY(-10rpx);
  }
}

/* 登录说明 */
.login-instructions {
  width: 90%;
  max-width: 500rpx;
  margin-top: 40rpx;
  margin-bottom: 50rpx;
  padding: 30rpx;
  /* 保持浅蓝色主题 */
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(179, 229, 252, 0.7));
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #01579B;
  z-index: 2;
  box-shadow: 0 10rpx 30rpx rgba(3, 169, 244, 0.15);
  position: relative;
  overflow: hidden;
}

.login-instructions::before {
  content: "";
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 80rpx;
  height: 80rpx;
  /* 保持蓝色装饰 */
  background: linear-gradient(135deg, #0288D1, #29B6F6);
  border-radius: 50%;
  opacity: 0.2;
}

.instruction-title {
  font-weight: bold;
  font-size: 30rpx;
  color: #0288D1;
  margin-bottom: 20rpx;
  position: relative;
  display: inline-block;
}

.instruction-title::after {
  content: "";
  position: absolute;
  bottom: -5rpx;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: linear-gradient(90deg, #0288D1, #29B6F6);
}

.instruction-item {
  line-height: 42rpx;
  margin-bottom: 15rpx;
  position: relative;
  padding-left: 25rpx;
}

.instruction-item::before {
  content: "✓";
  position: absolute;
  left: 0;
  color: #29B6F6;
  font-weight: bold;
}

.instruction-item:last-child {
  margin-bottom: 0;
}