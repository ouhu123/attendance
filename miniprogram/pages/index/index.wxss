/**index.wxss**/
/* 全局样式 */
page {
  height: 100vh;
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 登录容器 */
.login-container {
  height: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: -50rpx;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  animation: float 3s ease-in-out infinite;
}

.circle1 {
  width: 100rpx;
  height: 100rpx;
  top: 50rpx;
  left: 100rpx;
  animation-delay: 0s;
}

.circle2 {
  width: 60rpx;
  height: 60rpx;
  top: 100rpx;
  right: 150rpx;
  animation-delay: 1s;
}

.circle3 {
  width: 80rpx;
  height: 80rpx;
  top: 150rpx;
  left: 300rpx;
  animation-delay: 2s;
}

/* 浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

/* 标题部分 */
.title-section {
  margin-top: 150rpx;
  text-align: center;
  margin-bottom: 80rpx;
  z-index: 2;
}

.main-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 20rpx;
}

.sub-title {
  display: block;
  font-size: 28rpx;
  color: #64B5F6;
}

/* 登录表单 */
.login-form {
  width: 90%;
  max-width: 500rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  z-index: 2;
}

/* 用户类型选择 */
.user-type-selector {
  display: flex;
  justify-content: space-between;
  margin-bottom: 60rpx;
  padding: 10rpx;
  background: #E3F2FD;
  border-radius: 25rpx;
}

.type-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.type-item.active {
  background: #1976D2;
}

.type-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1976D2;
}

.type-item.active .type-text {
  color: white;
}

/* 输入组 */
.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.input-field {
  width: 100%;
  height: 80rpx;
  background: #F5F5F5;
  border: none;
  border-radius: 15rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.placeholder-text {
  color: #BDBDBD;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #42A5F5 0%, #1976D2 100%);
  border: none;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(66, 165, 245, 0.4);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 15rpx rgba(66, 165, 245, 0.3);
}

.login-btn-text {
  font-size: 32rpx;
  font-weight: bold;
}

/* 忘记密码 */
.forgot-password {
  text-align: center;
}

.forgot-text {
  font-size: 24rpx;
  color: #64B5F6;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: 1;
  overflow: hidden;
}

.decoration-wave {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 200%;
  height: 100%;
  background: linear-gradient(180deg, transparent 0%, rgba(255, 255, 255, 0.3) 100%);
  animation: wave 8s ease-in-out infinite;
}

/* 波浪动画 */
@keyframes wave {
  0%, 100% {
    transform: translateX(0) translateY(0);
  }
  50% {
    transform: translateX(-25%) translateY(-10rpx);
  }
}

/* 登录说明 */
.login-instructions {
  width: 90%;
  max-width: 500rpx;
  margin-top: 40rpx;
  margin-bottom: 50rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  z-index: 2;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
}

.instruction-title {
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.instruction-item {
  line-height: 40rpx;
  margin-bottom: 15rpx;
}

.instruction-item:last-child {
  margin-bottom: 0;
}
