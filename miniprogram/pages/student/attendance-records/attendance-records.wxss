/* 基础样式 */
.page {
  padding: 80rpx 40rpx 120rpx;
  font-family: 'Helvetica Neue', Arial, sans-serif;
  position: relative;
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 顶部装饰 */
.circle1 {
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  background-color: rgba(0, 122, 255, 0.05);
  border-radius: 50%;
  top: -100rpx;
  left: -50rpx;
  animation: float 10s ease-in-out infinite;
}

.circle2 {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(0, 122, 255, 0.08);
  border-radius: 50%;
  top: 150rpx;
  right: 50rpx;
  animation: float 12s ease-in-out infinite 2s;
}

.circle3 {
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  background-color: rgba(0, 122, 255, 0.05);
  border-radius: 50%;
  bottom: 200rpx;
  left: 100rpx;
  animation: float 8s ease-in-out infinite 1s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60rpx;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.logout-btn {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  border: 1rpx solid #007AFF;
  border-radius: 50rpx;
  color: #007AFF;
  background-color: rgba(0, 122, 255, 0.05);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.1);
  transition: all 0.3s ease;
}

.logout-btn:active {
  transform: scale(0.95);
  background-color: rgba(0, 122, 255, 0.1);
}

.welcome-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
}

.nav-right {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #007AFF;
  background-color: #fff;
}

/* 日期选择 */
.date-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.month-label {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.date-controls {
  display: flex;
  gap: 20rpx;
}

.control-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 50%;
  font-size: 32rpx;
  color: #666;
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: scale(0.95);
  background-color: #e8eaed;
}

.icon {
  font-weight: bold;
}

/* 签到记录列表 */
.attendance-list {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.list-header {
  display: flex;
  background-color: #f5f7fa;
  padding: 24rpx;
  border-bottom: 2rpx solid #e8eaed;
}

.header-item {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  text-align: center;
}

.list-content {
  max-height: 800rpx;
  overflow-y: auto;
}

.record-item {
  display: flex;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f2f5;
  transition: background-color 0.3s ease;
}

.record-item:last-child {
  border-bottom: none;
}

.record-item:active {
  background-color: #f5f7fa;
}

.record-date, .record-course, .record-time {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  word-break: break-all;
  padding: 0 8rpx;
}

.record-status {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.status-text {
  padding: 8rpx 16rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
  text-align: center;
}

.status-normal {
  background-color: rgba(0, 204, 0, 0.1);
  color: #00C853;
  border: 1rpx solid #00C853;
}

.status-late {
  background-color: rgba(255, 193, 7, 0.1);
  color: #FFC107;
  border: 1rpx solid #FFC107;
}

.status-absent {
  background-color: rgba(244, 67, 54, 0.1);
  color: #F44336;
  border: 1rpx solid #F44336;
}

/* 无数据提示 */
.no-data {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 32rpx;
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 24rpx 60rpx;
  background-color: #007AFF;
  color: #fff;
  border-radius: 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
  display: flex;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s ease;
}

.back-btn:active {
  transform: translateX(-50%) scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.2);
}