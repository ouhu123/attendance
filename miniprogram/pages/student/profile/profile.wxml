<view class="page">
  <!-- 顶部装饰 -->
  <view class="circle1"></view>
  <view class="circle2"></view>
  <view class="circle3"></view>
  
  <!-- 顶部导航栏 -->
  <view class="top-nav">
    <view class="nav-left">
      <text class="welcome-text">个人中心</text>
    </view>
    <view class="nav-right">
      <view class="logout-btn" bindtap="logout">退出</view>
      <view class="avatar-container" bindtap="goToEditProfile">
        <view class="avatar-default"></view>
      </view>
    </view>
  </view>
  
  <!-- 个人信息卡片 -->
  <view class="profile-card">
    <view class="profile-header">
      <view class="profile-avatar-default"></view>
      <view class="profile-info">
        <text class="profile-name">{{userInfo.name || '学生姓名'}}</text>
        <text class="profile-role">{{userInfo.role || '学生'}}</text>
      </view>
    </view>
    
    <view class="divider"></view>
    
    <view class="info-item">
      <text class="info-label">学号</text>
      <text class="info-value">{{userInfo.username || '2022000000'}}</text>
    </view>
    
    <view class="info-item">
      <text class="info-label">班级</text>
      <text class="info-value">{{userInfo.className || '软件工程3班'}}</text>
    </view>
    
    <view class="info-item">
      <text class="info-label">学院</text>
      <text class="info-value">{{userInfo.college || '信息科学与工程学院'}}</text>
    </view>
    
    <view class="info-item">
      <text class="info-label">联系方式</text>
      <text class="info-value">{{userInfo.phone || '138****1234'}}</text>
    </view>
  </view>
  
  <!-- 操作菜单 -->
  <view class="menu-section">
    <view class="menu-item" bindtap="changePassword">
      <text class="menu-icon">🔐</text>
      <text class="menu-text">修改密码</text>
      <text class="menu-arrow">›</text>
    </view>
    
    <view class="menu-item" bindtap="goToSettings">
      <text class="menu-icon">⚙️</text>
      <text class="menu-text">设置</text>
      <text class="menu-arrow">›</text>
    </view>
    
    <view class="menu-item" bindtap="goToAbout">
      <text class="menu-icon">ℹ️</text>
      <text class="menu-text">关于我们</text>
      <text class="menu-arrow">›</text>
    </view>
  </view>
  
  <!-- 返回首页按钮 -->
  <view class="back-btn" bindtap="goToMain">
    <text class="back-icon">‹</text>
    <text class="back-text">返回首页</text>
  </view>
</view>