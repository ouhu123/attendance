/* 基础样式 */
.page {
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  position: relative;
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 顶部装饰 */
.circle1 {
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  background-color: rgba(0, 122, 255, 0.05);
  border-radius: 50%;
  top: -100rpx;
  left: -50rpx;
  animation: float 10s ease-in-out infinite;
}

.circle2 {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(0, 122, 255, 0.08);
  border-radius: 50%;
  top: 150rpx;
  right: 50rpx;
  animation: float 12s ease-in-out infinite 2s;
}

.circle3 {
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  background-color: rgba(0, 122, 255, 0.05);
  border-radius: 50%;
  bottom: 200rpx;
  left: 100rpx;
  animation: float 8s ease-in-out infinite 1s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  margin-bottom: 0;
  background: linear-gradient(135deg, #1890ff 0%, #52c41a 100%);
  color: #fff;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.logout-btn {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 50rpx;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.logout-btn:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.2);
}

.welcome-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.nav-right {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 个人信息卡片 */
.profile-card {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
  overflow: hidden;
}

.profile-header {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #007AFF 0%, #5AC8FA 100%);
  color: #fff;
}

.profile-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  background-color: #fff;
  margin-right: 32rpx;
}

.profile-info {
  flex: 1;
}

.profile-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.profile-role {
  font-size: 30rpx;
  opacity: 0.9;
  display: block;
}

.divider {
  height: 2rpx;
  background-color: #f0f2f5;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f2f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 32rpx;
  color: #666;
}

.info-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 操作菜单 */
.menu-section {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 40rpx;
  border-bottom: 1rpx solid #f0f2f5;
  transition: background-color 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f5f7fa;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

.menu-arrow {
  font-size: 36rpx;
  color: #999;
}

/* 返回首页按钮 */
.back-btn {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 24rpx 60rpx;
  background-color: #007AFF;
  color: #fff;
  border-radius: 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
  display: flex;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s ease;
}

.back-btn:active {
  transform: translateX(-50%) scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.2);
}

.back-icon {
  font-size: 36rpx;
  font-weight: bold;
}