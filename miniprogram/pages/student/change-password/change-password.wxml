<view class="container">
  <view class="header">
    <view class="back" bindtap="goBack">
      <text class="back-icon">←</text>
    </view>
    <view class="title">修改密码</view>
    <view class="header-right"></view>
  </view>
  
  <view class="form-container">
    <view class="form-item">
      <view class="form-label">旧密码</view>
      <input class="form-input" 
             placeholder="请输入旧密码" 
             password 
             bindinput="onOldPasswordInput"
             value="{{oldPassword}}"
             auto-complete="off"/>
    </view>
    
    <view class="form-item">
      <view class="form-label">新密码</view>
      <input class="form-input" 
             placeholder="6-20位，包含大小写字母和数字" 
             password 
             bindinput="onNewPasswordInput"
             value="{{newPassword}}"
             auto-complete="off"/>
      <view class="password-hint" wx:if="{{showPasswordHint}}">
        {{passwordHint}}
      </view>
    </view>
    
    <view class="form-item">
      <view class="form-label">确认密码</view>
      <input class="form-input" 
             placeholder="请再次输入新密码" 
             password 
             bindinput="onConfirmPasswordInput"
             value="{{confirmPassword}}"
             auto-complete="off"/>
      <view class="password-hint" wx:if="{{confirmPassword !== newPassword && confirmPassword !== ''}}">
        两次输入的密码不一致
      </view>
    </view>
  </view>
  
  <button class="submit-btn" 
          bindtap="changePassword" 
          disabled="{{!canSubmit}}"
          type="primary">
    确认修改
  </button>
</view>