/* 学生主页面样式 - 与教师页面风格一致 */
page {
  height: 100vh;
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 学生主页面容器 */
.student-main-container {
  padding: 40rpx;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  animation: float 3s ease-in-out infinite;
}

.circle1 {
  width: 120rpx;
  height: 120rpx;
  top: 80rpx;
  left: 80rpx;
  animation-delay: 0s;
}

.circle2 {
  width: 80rpx;
  height: 80rpx;
  top: 120rpx;
  right: 120rpx;
  animation-delay: 1s;
}

.circle3 {
  width: 100rpx;
  height: 100rpx;
  top: 160rpx;
  left: 350rpx;
  animation-delay: 2s;
}

/* 浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 60rpx;
  z-index: 2;
  position: relative;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.logout-btn {
  font-size: 28rpx;
  color: #1976D2;
  background: rgba(255, 255, 255, 0.9);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  border: 2rpx solid #1976D2;
  cursor: pointer;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.logout-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #1976D2;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  border: 4rpx solid #1976D2;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 快速操作卡片 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
  z-index: 2;
  position: relative;
}

.action-card {
  width: 48%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.action-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 20rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #1976D2, #2196F3);
  box-shadow: 0 8rpx 20rpx rgba(25, 118, 210, 0.3);
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 12rpx;
}

.card-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 当前签到卡片 */
.current-attendance {
  margin-bottom: 50rpx;
  z-index: 2;
  position: relative;
}

.attendance-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.1);
}

.attendance-info {
  margin-bottom: 30rpx;
}

.course-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 12rpx;
}

.class-info {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.attendance-time {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.attendance-status {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 30rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
}

.remaining-time {
  font-size: 28rpx;
  color: #FF5722;
}

.sign-btn {
  width: 100%;
  background: linear-gradient(135deg, #1976D2, #2196F3);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  border-radius: 20rpx;
  padding: 20rpx 0;
  box-shadow: 0 8rpx 20rpx rgba(25, 118, 210, 0.3);
}

.sign-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(25, 118, 210, 0.3);
}

/* 已签到状态文本 */
.signed-text {
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: 500;
}

/* 最近签到信息 */
.recent-attendance {
  margin-bottom: 50rpx;
  z-index: 2;
  position: relative;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976D2;
}

.more-text {
  font-size: 24rpx;
  color: #666;
  cursor: pointer;
}

.attendance-list {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 0;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.attendance-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
}

.attendance-item:last-child {
  border-bottom: none;
}

.item-left {
  flex: 1;
}

.item-right {
  text-align: right;
}

.attendance-count {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 8rpx;
}

.signed-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
}

.not-signed-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #F44336;
}

.sign-time {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 统计信息 */
.statistics {
  z-index: 2;
  position: relative;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.stat-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.1);
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 12rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 手势签到弹窗样式 */
.gesture-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.gesture-modal-content {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 600rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}

.modal-tip {
  font-size: 28rpx;
  text-align: center;
  color: #666;
  margin-bottom: 40rpx;
}

.gesture-container-modal {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  margin-bottom: 40rpx;
}

.gesture-grid-modal {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  touch-action: none;
  border: 2rpx solid #e0e0e0;
}

.gesture-point-modal {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border: 4rpx solid #4a90e2;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  z-index: 2;
}

.gesture-point-modal.active {
  background-color: #4a90e2;
  border-color: #4a90e2;
}

.gesture-canvas-modal {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.modal-btn-reset {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
  color: #333;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
}

.modal-btn-confirm {
  flex: 1;
  padding: 20rpx;
  background-color: #1976D2;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: 2rpx solid #1976D2;
}