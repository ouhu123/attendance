<!-- pages/student/course-statistics/course-statistics.wxml -->
<view class="container">
  <!-- 统一卡片容器 -->
  <view class="unified-card">
    <!-- 课程信息 -->
    <view class="course-title">
      <text class="course-name">{{courseName}}</text>
    </view>
    
    <!-- 应签到次数 -->
    <view class="total-attendance">
      <text class="total-label">应签到次数:</text>
      <text class="total-value">{{totalAttendance}}</text>
    </view>
    
    <!-- 图表区域 -->
    <view class="chart-container">
      <canvas type="2d" id="attendance-chart" class="chart-canvas"></canvas>
    </view>
  </view>
</view>