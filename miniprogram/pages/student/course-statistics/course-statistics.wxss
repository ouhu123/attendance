/* pages/student/course-statistics/course-statistics.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 课程信息卡片样式 */
.course-info-card {
  background-color: white;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.course-title {
  display: flex;
  justify-content: center;
}

.course-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 出勤率信息卡片样式 */
.attendance-rate-card {
  background-color: white;
  padding: 40rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  text-align: center;
}

.rate-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.rate-value {
  font-size: 72rpx;
  font-weight: bold;
  color: #4285F4;
}

/* 签到明细卡片样式 */
.details-card {
  background-color: white;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.details-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 32rpx;
  color: #666;
}

.detail-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.detail-value.present {
  color: #34A853;
}

.detail-value.late {
  color: #FBBC05;
}

.detail-value.leave {
  color: #4285F4;
}

.detail-value.absent {
  color: #EA4335;
}