/* pages/student/course-statistics/course-statistics.wxss */
.container {
  padding: 20rpx 10rpx;
  background: linear-gradient(135deg, #E1F5FE 0%, #B3E5FC 50%, #81D4FA 100%);
  min-height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

/* 统一卡片布局 */
.unified-card {
  background: rgba(255, 255, 255, 0.95);
  padding: 30rpx 30rpx 50rpx 30rpx; /* 增加底部内边距 */
  border-radius: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(3, 169, 244, 0.2);
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  overflow: visible; /* 确保内容不被裁剪 */
}

/* 移除旧样式 */
.course-info-card {
  display: none;
}

.course-title {
  display: flex;
  justify-content: center;
}

.course-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 出勤率信息卡片样式 */
.attendance-rate-card {
  background: rgba(255, 255, 255, 0.95);
  padding: 40rpx;
  border-radius: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(3, 169, 244, 0.2);
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
}

.attendance-rate-card::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(3, 169, 244, 0.05) 50%,
    transparent 70%
  );
  animation: shimmer 3s infinite;
  z-index: -1;
}

/* 闪光动画 */
@keyframes shimmer {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 应签到次数样式 */
.total-attendance {
  margin-bottom: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #1976D2;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(3, 169, 244, 0.15);
}

.total-label {
  margin-right: 10rpx;
}

.total-value {
  color: #D32F2F;
  font-size: 40rpx;
}

/* 图表容器 */
.chart-container {
  position: relative;
  width: 100%;
  height: 700rpx; /* 增加高度，为所有标签留出足够空间 */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.chart-canvas {
  width: 100%;
  height: 100%;
  max-width: 550rpx;
  max-height: 650rpx;
  background-color: transparent;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotateX(0);
  }
  50% {
    transform: translateY(-10rpx) rotateX(2deg);
  }
}

/* 图表中心文字 */
.chart-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  z-index: 10;
}

.chart-percentage {
  font-size: 72rpx;
  font-weight: bold;
  color: #0288D1;
  text-shadow: 0 2rpx 4rpx rgba(3, 169, 244, 0.2);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.9;
  }
  50% {
    transform: scale(1.05);
    opacity: 1;
  }
}

.chart-label {
  font-size: 28rpx;
  color: #29B6F6;
  margin-top: 10rpx;
  font-weight: 500;
}



/* 签到明细卡片样式 */
.details-card {
  background: rgba(255, 255, 255, 0.95);
  padding: 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(3, 169, 244, 0.2);
  position: relative;
  overflow: hidden;
}

.details-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 32rpx;
  color: #666;
}

.detail-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.detail-value.present {
  color: #34A853;
}

.detail-value.late {
  color: #FBBC05;
}

.detail-value.leave {
  color: #4285F4;
}

.detail-value.absent {
  color: #EA4335;
}