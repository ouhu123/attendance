/* pages/student/sign/sign.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 九宫格手势样式 */
.gesture-container {
  position: relative;
  width: 500rpx;
  height: 500rpx;
  margin: 20rpx auto;
}

.gesture-grid {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  touch-action: none;
}

.gesture-point {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  background-color: #fff;
  border: 4rpx solid #4a90e2;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
}

.gesture-point.active {
  background-color: #4a90e2;
}

.gesture-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.gesture-path {
  position: absolute;
  top: 530rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 28rpx;
  color: #666;
  min-height: 30rpx;
  text-align: center;
  padding: 10rpx;
}

.gesture-tip {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin: 40rpx 0;
  color: #333;
}

.section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.location-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.location-prompt {
  font-size: 28rpx;
  color: #999;
}

.scan-prompt {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  text-align: center;
}

.get-location-btn {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  height: auto;
  line-height: normal;
}

.location-info,
.scan-info {
  font-size: 28rpx;
  line-height: 50rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.open-map-btn {
  margin-top: 20rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  height: auto;
  line-height: normal;
  background-color: #007aff;
  color: white;
}

.scan-btn {
  margin-top: 10rpx;
}

.sign-btn {
  margin-top: 40rpx;
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.reset-btn {
  margin-top: 20rpx;
  background-color: #f56c6c;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
}