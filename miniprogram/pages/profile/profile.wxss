/* 共用个人中心页面样式 - 包含教师端和学生端样式 */

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

/* 主容器 */
.profile-container {
  padding: 0;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 顶部个人信息区域 */
.profile-header {
  background: linear-gradient(135deg, #1890ff 0%, #52c41a 100%);
  padding: 60rpx 0 40rpx;
  text-align: center;
  position: relative;
}

/* 退出按钮区域 */
.logout-section {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  z-index: 10;
}

/* 退出按钮样式 */
.logout-btn {
  font-size: 28rpx;
  color: #1976D2;
  background: rgba(255, 255, 255, 0.9);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  border: 2rpx solid #1976D2;
  cursor: pointer;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.logout-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 头像区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 头像 */
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.9);
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  overflow: hidden;
}

.avatar:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 头像图片 */
.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 头像占位符 */
.avatar-placeholder {
  font-size: 36rpx;
  color: #999;
}

/* 教师姓名 */
.teacher-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 教师工号 */
.teacher-id {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 学生姓名 */
.student-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 学生学号 */
.student-id {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 个人信息列表 */
.info-list {
  background-color: #fff;
  margin: 20rpx 0;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 信息项 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 最后一个信息项无边框 */
.info-item:last-child {
  border-bottom: none;
}

/* 信息标签 */
.info-label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 信息值 */
.info-value {
  font-size: 32rpx;
  color: #666;
  text-align: right;
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 操作菜单区域 */
.menu-section {
  background-color: #fff;
  margin: 20rpx 0;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 菜单项 */
.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fff;
  transition: background-color 0.2s;
}

.menu-item:active {
  background-color: #f5f5f5;
}

/* 最后一个菜单项无边框 */
.menu-item:last-child {
  border-bottom: none;
}

/* 菜单图标 */
.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 菜单文字 */
.menu-text {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

/* 箭头图标 */
.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  border-right: 3rpx solid #ccc;
  border-top: 3rpx solid #ccc;
  transform: rotate(45deg);
}

/* 操作按钮区域 */
.action-buttons {
  padding: 0 40rpx 40rpx;
  margin-top: auto;
}

/* 退出登录按钮 */
.logout-action-btn {
  width: 100%;
  height: 100rpx;
  margin-bottom: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  background-color: #ff4d4f;
  color: #fff;
  border: 2rpx solid #ff4d4f;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

/* 按钮点击效果 */
.logout-action-btn:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

/* 班级管理和课程管理等教师专属菜单 */
.teacher-menu-item {
  background-color: #f0f8ff;
  border-left: 6rpx solid #1890ff;
}

/* 学生课程表和成绩查询等学生专属菜单 */
.student-menu-item {
  background-color: #f0fff0;
  border-left: 6rpx solid #52c41a;
}

/* 修改密码按钮 */
.change-password-btn {
  background-color: #fff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
}

/* 设置按钮 */
.settings-btn {
  background-color: #fff;
  color: #faad14;
  border: 2rpx solid #faad14;
}

/* 关于我们按钮 */
.about-btn {
  background-color: #fff;
  color: #52c41a;
  border: 2rpx solid #52c41a;
}

/* 适配深色模式 */
@media (prefers-color-scheme: dark) {
  page {
    background-color: #1a1a1a;
  }
  
  .info-list {
    background-color: #2a2a2a;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
  }
  
  .info-item {
    border-bottom-color: #3a3a3a;
  }
  
  .info-label {
    color: #e0e0e0;
  }
  
  .info-value {
    color: #b0b0b0;
  }
  
  .menu-section {
    background-color: #2a2a2a;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
  }
  
  .menu-item {
    background-color: #2a2a2a;
    border-bottom-color: #3a3a3a;
  }
  
  .menu-text {
    color: #e0e0e0;
  }
  
  .arrow-icon {
    border-right-color: #666;
    border-top-color: #666;
  }
  
  .teacher-menu-item {
    background-color: #1a3a52;
  }
  
  .student-menu-item {
    background-color: #1a4a2a;
  }
  
  .action-btn {
    background-color: #2a2a2a;
    color: #40a9ff;
    border-color: #40a9ff;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  }
  
  .logout-btn {
    background-color: #ff4d4f;
    color: #fff;
    border-color: #ff4d4f;
  }
}