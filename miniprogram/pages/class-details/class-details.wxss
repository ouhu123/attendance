/* pages/class-details/class-details.wxss */
.class-details-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1976D2 0%, #64B5F6 100%);
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.back-btn {
  margin-right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: #fff;
}

.page-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.class-info-section {
  margin-bottom: 40rpx;
}

.class-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.class-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.class-meta {
  display: flex;
  justify-content: space-between;
}

.meta-item {
  font-size: 28rpx;
  color: #4285F4;
  font-weight: 500;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.student-list, .course-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.student-item, .course-item {
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.student-item:last-child, .course-item:last-child {
  border-bottom: none;
}

.student-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.student-name-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.student-name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.student-no {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.attendance-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-value {
  font-size: 26rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.stat-value.attendance {
  color: #4CAF50;
  background-color: #E8F5E9;
}

.stat-value.late {
  color: #FF9800;
  background-color: #FFF3E0;
}

.stat-value.leave {
  color: #2196F3;
  background-color: #E3F2FD;
}

.stat-value.absent {
  color: #F44336;
  background-color: #FFEBEE;
}

.course-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #666;
  font-size: 28rpx;
}